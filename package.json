{
  "name": "workflow-edu",
  "version": "1.0.0",
  "description": "Site for teachers to compare and discover the best learning/working Workflows",
  "main": "index.js",
  "scripts": {
    "prestart": "yarn build:tw",
    "start": "netlify dev",
    "build": "yarn build:lambda && yarn build:css",
    "build:lambda": "netlify-lambda build src/lambda",
    "build:css": "yarn build:tw",
    "build:tw": "tailwind build src/styles.css -o public/styles.css",
    "postbuild:css": "purgecss -c purgecss.config.js -o public",
    "lint": "xo src",
    "format": "xo src --fix"
  },
  "keywords": [
    "netlify",
    "lambda"
  ],
  "author": "Liam Hession",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "netlify-cli": "^2.11.19",
    "netlify-lambda": "^1.4.13",
    "purgecss": "^1.3.0",
    "tailwindcss": "^1.0.2",
    "xo": "^0.24.0"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "camelcase": 0
    }
  }
}
